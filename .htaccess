RewriteEngine On

# Always enable HTTPS (If available)
<IfModule mod_ssl.c>
	RewriteCond %{HTTPS} !=on
	RewriteCond %{ENV:HTTPS} !=on
	RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]
</IfModule>

# Obscure PHP version
Header set X-Powered-By "Kittens"

# favicon.ico is inside of img/
RewriteRule ^favicon\.ico$ /img/favicon.ico
